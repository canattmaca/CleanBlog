<%- include('partials/_header') %>

<body>

  <!-- Navigation -->
  <%- include('partials/_nav') %>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Edit the Post</h1>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <form  action="/post/<%= post._id %>?_method=PUT"
         method="POST">
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <input type="text" name="title" class="form-control" placeholder="Post Title" value="<%= post.title %>">
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <textarea rows="5" name="details" class="form-control" placeholder="Detail"><%= post.details %></textarea>
            </div>
          </div>
          <br>
          <button type="submit" class="btn btn-primary">Edit</button>
        </form>
      </div>
    </div>
  </div>

  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') %>


  <!-- Contact Form JavaScript -->
  <script src="js/jqBootstrapValidation.js"></script>
  <script src="js/contact_me.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
